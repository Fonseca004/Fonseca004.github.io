---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-[790px] mx-auto flex-col gap-2 md:flex-row md:justify-between">
  <a href="/" class="hover:text-orange-700 hover:font-bold"
    >Jos√© Fonseca's Website</a
  > 

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{ 
            ["hover:text-orange-700"]: true,
            ["text-orange-700"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-orange-700"]: true,
            ["text-orange-700"]: pathname === "/posts",
          }}>Blog</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/portfolio"
          class:list={{
            ["hover:text-orange-700"]: true,
            ["text-orange-700"]: pathname === "/portfolio",
          }}>Photo Gallery</a
        >
      </li>
    </ul>
  </nav>
</header>