---
import type { Photo } from "@/data/portfolio";

type Props = Photo;

const { title, date, img} = Astro.props;

---
<>
  <div class="relative">
    {/* Square image */}
    <img src={img} alt={title} class="w-full h-auto aspect-w-1 aspect-h-1 object-cover transition-transform duration-300 hover:-translate-y-1" />

    {/* Title and Date */}
    <div class="absolute inset-0 flex flex-col items-center justify-center z-10 opacity-0 hover:opacity-100 transition-opacity duration-300 bg-black bg-opacity-30 backdrop-filter backdrop-blur-sm">
      <p class="text-white text-center">{title}</p>
      <p class="text-white text-center">{date}</p>
    </div>
  </div>
</>





